<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstiloBoton">
        <item name="android:layout_height">@dimen/tambotones</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:shadowColor">@color/sombraboton</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/tamtextoboton</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:textColor">@color/colortexto</item>
        <item name="android:layout_margin">@dimen/marginbotones</item>



    </style>


</resources>
